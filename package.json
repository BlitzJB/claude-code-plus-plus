{
  "name": "claude-code-plus-plus",
  "version": "0.1.1",
  "description": "Multi-pane terminal interface for parallel Claude Code agents with git worktree isolation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude++": "./dist/index.js",
    "ccp": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlitzJB/claude-code-plus-plus.git"
  },
  "homepage": "https://github.com/BlitzJB/claude-code-plus-plus#readme",
  "bugs": {
    "url": "https://github.com/BlitzJB/claude-code-plus-plus/issues"
  },
  "author": "blitzjb",
  "dependencies": {
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.6.0",
    "tsx": "^4.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "terminal",
    "tui",
    "tmux",
    "git-worktree",
    "multi-agent",
    "parallel",
    "coding-assistant"
  ],
  "license": "MIT"
}
